{
  "compilerOptions": {
    "target": "es5", // es5 | es2015 | esnext
    "module": "commonjs",

    // JS options
    "allowJs": true, //        Compile .js files
    "checkJs": true, //        Typecheck .js files
    "declaration": true, //    Generate .d.ts files
    "declarationMap": true, // Generate .d.ts.map
    "sourceMap": true, //      Generate .js.map

    // Jsx
    "jsx": "preserve",

    // Source files
    "outDir": "./lib",
    "rootDir": "./src",

    // Strict mode
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "coverage",
    "**/*.test.js"
  ]
}
