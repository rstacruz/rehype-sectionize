{
  "compilerOptions": {
    // Source files
    "outDir": "./lib",
    "rootDir": "./src",

    "target": "es2020",
    "lib": ["es2020"], // allow Map, Set, .flat, etc
    "module": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Files to generate
    "declaration": true, //     Generate .d.ts files
    "declarationMap": false, // Generate .d.ts.map
    "sourceMap": false, //      Generate .js.map

    // Jsx
    "jsx": "preserve",

    // Strict mode
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "coverage",
    "node_modules/**/*.ts",
    "**/*.test.js"
  ]
}
